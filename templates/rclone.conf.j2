# Rclone configuration for Google Drive (OAuth)
# Generated by Ansible from template

[{{ rclone_remote_name }}]
type = drive
scope = {{ rclone_scope | default('drive') }}
{% if rclone_client_id is defined and rclone_client_id %}
client_id = {{ rclone_client_id }}
{% endif %}
{% if rclone_client_secret is defined and rclone_client_secret %}
client_secret = {{ rclone_client_secret }}
{% endif %}
token = {{ rclone_token | to_json }}
{% if rclone_team_drive is defined and rclone_team_drive %}
team_drive = {{ rclone_team_drive }}
{% endif %}
{% if rclone_root_folder_id is defined and rclone_root_folder_id %}
root_folder_id = {{ rclone_root_folder_id }}
{% endif %}
